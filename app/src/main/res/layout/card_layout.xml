<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:layout_height="90dp"
    android:layout_marginHorizontal="5dp"
    android:id="@+id/relativeLayout">

    <ImageView
        android:id="@+id/iv_cardBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/img_cardlayout"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/iv_cardRarity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/img_rarity_1"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/tv_cardName"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/almendra_sc"
        android:gravity="center"
        android:text="Card Name"
        android:textColor="@android:color/black"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_cardBackground" />

    <TextView
        android:id="@+id/tv_cardAttack"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="5dp"
        android:gravity="center"
        android:text="1"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_cardDefense"
        android:layout_width="21dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"
        android:gravity="center"
        android:text="1"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/iv_cardImg"
        android:layout_width="62dp"
        android:layout_height="70dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_cardBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_cardName"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/img_peasant" />

    <TextView
        android:id="@+id/tv_cardMana"
        android:layout_width="37dp"
        android:layout_height="40dp"
        android:layout_marginBottom="14dp"
        android:layout_marginStart="4dp"
        android:fontFamily="@font/almendra_sc"
        android:rotation="270"
        android:shadowColor="?attr/colorBackgroundFloating"
        android:text="1000"
        android:textColor="@android:color/black"
        android:textSize="13sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_cardAttack"
        app:layout_constraintStart_toStartOf="@+id/iv_cardBackground" />

    <TextView
        android:id="@+id/tv_cardSpecial"
        android:layout_width="45dp"
        android:layout_height="31dp"
        android:fontFamily="@font/almendra_sc"
        android:rotation="90"
        android:text="double"
        android:textColor="@android:color/black"
        android:textSize="10sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_cardDefense"
        app:layout_constraintEnd_toEndOf="@+id/iv_cardBackground" />

    <TextView
        android:id="@+id/tv_cardId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_cardType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_cardRarity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:visibility="gone" />

</android.support.constraint.ConstraintLayout>